<Window x:Class="PortailJeux.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portail de Jeux" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="JeuxPanel" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
            <!-- Les boutons des jeux seront ajoutés ici dynamiquement -->
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
</Window>
